<!-- res/layout/activity_main.xml -->
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="48sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/waterMotorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Motor (10 mins)"
        android:layout_below="@id/timerText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/breadToastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bread Toast (5 mins)"
        android:layout_below="@id/waterMotorButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/milkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milk (2 mins)"
        android:layout_below="@id/breadToastButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/waterBoilingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Boiling (1 min)"
        android:layout_below="@id/milkButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
